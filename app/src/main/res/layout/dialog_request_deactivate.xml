<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvConfirmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận vô hiệu hóa"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/tvConfirmMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn chắc chắn muốn vô hiệu hóa tài khoản của mình?\n\nChúng tôi sẽ gửi mã OTP xác thực đến email của bạn để hoàn tất quá trình."
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:text="Huỷ"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_slim"
            android:text="Tiếp tục" />
    </LinearLayout>
</LinearLayout>
