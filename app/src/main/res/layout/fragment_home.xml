<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Banner quảng cáo -->
            <LinearLayout
                android:id="@+id/banner_organic"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/bg_sale_banner"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <!-- Cột trái: text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_marginEnd="140dp"> <!-- Thêm khoảng cách để tránh đè lên ảnh -->

                    <TextView
                        android:id="@+id/banner_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chào mừng bạn đến với Ogani"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/banner_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem ngay những sản phẩm của chúng tôi"
                        android:textColor="#27ae60"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/banner_button"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:minWidth="88dp"
                        android:text="Mua ngay"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="16dp"
                        android:backgroundTint="#27ae60"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                </LinearLayout>
            </LinearLayout>

            <!-- Danh sách category -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/category_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp" />
            </HorizontalScrollView>

            <!-- Giao diện sản phẩm -->
            <LinearLayout
                android:id="@+id/category_block_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>