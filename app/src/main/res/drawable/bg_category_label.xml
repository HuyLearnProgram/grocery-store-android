<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Left top shadow -->
    <item android:right="2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#3027ae60" /> <!-- 30% opacity of #27ae60 -->
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"
                />
            <padding android:left="2dp" android:top="2dp" />

        </shape>
    </item>

    <!--     Right top shadow-->
    <item android:bottom="0dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#3027ae60" /> <!-- 30% opacity of #27ae60 -->
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"
                />
            <padding android:right="2dp" android:top="2dp" />

        </shape>
    </item>
